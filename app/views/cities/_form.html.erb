<%= form_with(model: city, local: true) do |form| %>
  <% if city.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% city.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :city_name %>
  </div>

  <div class="field">
    <%= form.label :introduction %>
    <%= form.text_area :introduction, id: :city_introduction %>
  </div>

  <div class="field">
    <%= form.label :state %>
    <%= form.number_field :state, id: :city_state %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
