<div class="form">
  <%= form_with(model: comment, url: { action: 'confirm' }, local: true) do |form| %>
    <% if comment.errors.any? %>
      <div id="error_explanation">
        <ul>
        <% comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.text_field :nickname, placeholder: "Nickname",  id: :comment_nickname, class: "text-field" %>
    </div>

    <div class="field">
      <%= form.text_area :message, placeholder: "Comment",  id: :comment_message, class: "text-area-content" %>
    </div>

    <div class="actions clearfix">
      <%= form.submit 'confirm', class: "submit right" %>
    </div>
  <% end %>
</div>