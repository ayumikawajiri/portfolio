<div class="section-body">
  <div class="breadcrumbs" >
    <%= render_breadcrumbs separator: ' > ' %>
  </div>

  <div class="h1-var clearfix">
    <div class="h1-title left"><%= @category %></div>
    <div class="h1-sub right"><%= link_to 'Back', 'javascript:history.back()' %></div>
  </div>

  <div class="classifieds-container">
    <div class="clearfix">
      <div class="page right"><%= page_entries_info(@categories) %></div>
    </div>
    <% @categories.each do |category| %>
      <%= link_to [category.city, category] do %>
        <div class="border clearfix">
          <p class="cl-table-title left"><%= category.title %></p>
          <p class="cl-table-date left"><%= category.created_at.strftime("%Y/%m/%d") %></p>
          <% if category.type == "job" %>
            <p class="cl-table-category left"><%= category.category_job %></p>
          <% elsif category.type == "house" %>
            <p class="cl-table-category left"><%= category.category_house %></p>
          <% elsif category.type == "community" %>
            <p class="cl-table-category left"><%= category.category_community %></p>
          <% end %>
        </div>
      <% end %>
    <% end %>
    <div class="clearfix">
      <div class="page right"><%= paginate(@categories) %></div>
    </div>
  </div>
</div>