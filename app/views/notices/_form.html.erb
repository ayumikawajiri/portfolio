<%= form_with(model: notice, url: { action: 'confirm' }, local: true) do |form| %>
  <% if notice.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% notice.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :notice_title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, id: :notice_content %>
  </div>

  <div class="actions">
    <%= form.submit 'Confirm' %>
  </div>
<% end %>
